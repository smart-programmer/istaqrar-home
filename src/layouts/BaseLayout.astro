---
import '../styles/global.css';
import logoJpeg from '../../logo.jpeg';
const { title = 'استقرار الجودة', description = 'شريكك الموثوق في رحلة الجودة والتميز.' } = Astro.props;
const base = import.meta.env.BASE_URL;
const withBase = (path: string) => `${base}${base.endsWith('/') ? '' : '/'}${path.replace(/^\//, '')}`;
const site = Astro.site?.href || 'https://istaqrar.sa/';
const canonical = new URL(base || '/', site).toString();
---
<html lang="ar" dir="rtl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="keywords" content="استقرار الجودة, استقرار, istaqrar, تقييم الجودة, سلامة الأغذية, تقارير تفصيلية, استشارات, باقات مرنة" />
    <meta name="robots" content="index,follow" />
    <link rel="canonical" href={canonical} />
    <link rel="alternate" hrefLang="ar" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="استقرار الجودة" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={withBase('logo.svg')} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={withBase('logo.svg')} />
    <title>{title}</title>
    <!-- Primary favicon (JPEG) bundled by Vite/Astro -->
    <link rel="icon" type="image/jpeg" href={logoJpeg} />
    <!-- SVG alternative favicon served from public/ with safe BASE_URL -->
    <link rel="alternate icon" type="image/svg+xml" href={withBase('logo.svg')} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'استقرار الجودة',
      url: site,
      logo: withBase('logo.svg'),
      sameAs: ['https://www.istaqrar.sa']
    })}</script>
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebSite',
      name: 'استقرار الجودة',
      url: site,
      potentialAction: {
        '@type': 'SearchAction',
        target: `${site}?q={search_term_string}`,
        'query-input': 'required name=search_term_string'
      }
    })}</script>
  </head>
  <body>
    <slot />
    <script type="module">
      // Ensure content remains visible; toggle class for AOS-ready state
      const ready = () => document.documentElement.classList.add('aos-enabled');
      window.addEventListener('load', async () => {
        try {
          const { default: AOS } = await import('aos');
          ready();
          AOS.init({ duration: 700, once: true, easing: 'ease-out' });
          // Ensure elements in viewport are revealed immediately
          requestAnimationFrame(() => {
            try { AOS.refreshHard(); } catch {}
            document.querySelectorAll('[data-aos]').forEach((el) => {
              (el as HTMLElement).classList.add('aos-animate');
            });
          });
        } catch (e) {
          // Even if AOS fails, ensure content is visible
          ready();
          console.warn('AOS failed to load:', e);
        }
      });
    </script>
  </body>
</html>
